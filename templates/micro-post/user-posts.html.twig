{% extends 'base.html.twig' %}

{% block title %}Micro Posts{% endblock %}

{% block body %}
    <div class="card-group py-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    {{ user.fullName }}
                    <small class="text-muted">Â· @{{ user.username }}</small>
                </h5>

                {% if is_granted('ROLE_USER') and user != app.user %}
                    {%  if  user.followers.contains(app.user) == false %}
                        <a href="{{ path('following_follow',{'id': user.id}) }}" class="btn btn-outline-primary">Follow</a>
                     {% else %}
                         <a href="{{ path('following_unfollow',{'id': user.id}) }}" class="btn btn-outline-danger">Unfollow</a>
                        {% endif %}
                {% endif %}
            </div>
        </div>
    </div>

    <div class="card-group py-2">
        <div class="card">
            <div class="card-body">
                <h5>Followers <span class="text-info">({{ user.followers|length }})</span></h5>
            </div>
            <ul class="list-group list-group-flush">
                {% for follower in user.followers %}
                    <li class="list-group-item">
                        <a href="{{ path('micro_post_user',
                            {'username': follower.username}) }}">
                            @{{ follower.username }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="card">
            <div class="card-body">
                <h5>Following <span class="text-info">({{ user.following|length }})</span></h5>
            </div>
            <ul class="list-group list-group-flush">
                {% for following in user.following %}
                    <li class="list-group-item">
                        <a href="{{ path('micro_post_user',
                            {'username': following.username}) }}">
                            @{{ following.username }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    {% for post in posts %}
        {{ include('micro-post/_row-post.html.twig',{'post': post }) }}
        <small class="d-block text-right mt-3">
            {% if is_granted('MICRO_POST_EDIT',post) %}
                <a href="{{ path('micro_post_edit',{'id':post.id}) }}">Edit</a>
            {% endif %}
            {% if is_granted('MICRO_POST_DELETE',post) %}
                <a href="{{ path('micro_post_delete',{'id':post.id}) }}" class="text-danger">Delete</a>
            {% endif %}
        </small>
    {% endfor %}
{% endblock %}
